<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/verse_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="19dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/verse_ara_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="4dp"
                android:text="بسم الله الرحمن الرحيم"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/verse_Num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/verse_ara_tv"
                app:layout_constraintBottom_toBottomOf="@id/verse_ara_tv"
                app:layout_constraintTop_toTopOf="@id/verse_ara_tv" />

            <TextView
                android:id="@+id/verse_translated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                android:text="in the name of allah, the all merciful ,the "
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verse_ara_tv" />

            <Button
                android:id="@+id/copy_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                app:layout_constraintStart_toEndOf="@+id/volume_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_baseline_bookmark_24"
                app:layout_constraintTop_toBottomOf="@+id/verse_translated" />

            <Button
                android:id="@+id/volume_button"
                android:background="@drawable/ic_baseline_volume_up_24"
                android:layout_width="31dp"
                android:layout_height="31dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verse_translated"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>