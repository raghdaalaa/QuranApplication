<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/iv_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv1_id"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv1_id"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Surah name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_id"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/tv2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surah verse number"
        android:textColor="@color/starcolor"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/iv_id"
        app:layout_constraintTop_toBottomOf="@id/tv1_id"
        />


    <ImageView
        android:id="@+id/iv2_id"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_speaker_filled_audio_tool"
        app:layout_constraintStart_toEndOf="@id/tv1_id"
        app:layout_constraintTop_toTopOf="@id/iv_id"
        app:layout_constraintBottom_toBottomOf="@id/iv_id"

        />

</androidx.constraintlayout.widget.ConstraintLayout>



